<div class="container">
  <div class="row">
    <div class="col-sm-12">

<h1>Products</h1>
    <br>
    <table class="table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Name</th>
          <th>Price</th>
          <th>Categories</th>
          <th> <%=  link_to "New Product", new_product_path, class: "btn btn-primary" %></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td>
              <% product.categories.each do |category| %>
                <%= category.name %>,
              <% end %>
            </td>
            <td>

              <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning" %>
              <%= link_to 'Delete', product_path(product), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
